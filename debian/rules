#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=0

PREFIX       := /usr
LISPDIR      := /usr/share/emacs/site-lisp/dvc

include /usr/share/cdbs/1/rules/debhelper.mk

clean::
	[ ! -f Makefile ] || $(MAKE) distclean

configure/dvc::
	autoconf -f -i
	./configure --prefix=$(PREFIX) --with-lispdir=$(LISPDIR)
	$(MAKE) info

install/dvc::
	install -m 744 config.status $(DEB_DESTDIR)$(LISPDIR)
	install -m 644 Makefile* $(DEB_DESTDIR)$(LISPDIR)
	install -m 644 lisp/Makefile* $(DEB_DESTDIR)$(LISPDIR)/lisp/
	install -m 644 lisp/Makefile* lisp/*.el lisp/dvc-site.el.in $(DEB_DESTDIR)$(LISPDIR)/lisp/
	install -m 644 lisp/contrib/*.el $(DEB_DESTDIR)$(LISPDIR)/lisp/contrib/
