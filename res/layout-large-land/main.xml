<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/topScroll" >
  <LinearLayout
      android:orientation="vertical"
      android:gravity="top"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="1">
    <!-- artist
         album
         song titles
         next/play/prev buttons | time
         seekbar
         notes buttons
         playlist
    -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ff7f7f7f" />  <!-- separator -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/artistTitle"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ff7f7f7f" /> <!-- separator -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/albumTitle"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ff7f7f7f" /> <!-- separator -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/songTitle"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ffffffff"/> <!-- separator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dip"
        android:paddingBottom="4dip"
        android:orientation="horizontal">
      <!-- next/play/prev buttons | time -->
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:layout_gravity="bottom"
          android:background="#ff5a5a5a"
          android:layout_marginTop="1dip"
          android:layout_marginBottom="2dip"
          android:gravity="center">
        <!-- layout background for transparent part of buttons -->
        <!-- next/play/prev buttons -->
        <ImageButton
            android:id="@+id/prev"
            style="@android:style/MediaButton.Previous"
            android:background="#00000000"/> <!-- transparent -->
        <ImageButton
            android:id="@+id/play_pause"
            style="@android:style/MediaButton.Play"
            android:background="#00000000"/> <!-- transparent -->
        <ImageButton
            android:id="@+id/next"
            style="@android:style/MediaButton.Next"
            android:background="#00000000"/> <!-- transparent -->
      </LinearLayout>
      <LinearLayout
          android:orientation="vertical"
          android:gravity="top"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginLeft="8dp"
          android:weightSum="1">
        <!-- times -->
        <TextView
            android:id="@+id/currenttime"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/totaltime"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
      </LinearLayout>
      <!-- only one match_parent allowed in one direction, and must be last in list -->
      <SeekBar
          android:id="@android:id/progress"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_width="match_parent"
          android:layout_height="36dip"
          android:paddingLeft="8dip"
          android:paddingRight="8dip"
          android:paddingBottom="4dip" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/notes_buttons_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginTop="1dip"
        android:layout_marginBottom="2dip"
        android:gravity="center"> 
      <!-- can't use @string in textSize attribute, despite the documentation
           layout_height of wrap_content on buttons screws up -->
      <!-- notes buttons, (one row in on xlarge screen)
      -->
      <Button
          android:id="@+id/note_category"
          android:layout_height="match_parent"
          android:layout_width="wrap_content"
          android:text="@string/note_category"
          android:textSize="18sp"
          android:onClick="onClickNote"/>
      <Button
          android:id="@+id/note_dont_play"
          android:layout_height="match_parent"
          android:layout_width="wrap_content"
          android:text="@string/note_dont_play"
          android:textSize="18sp"
          android:onClick="onClickNote"/>
      <Button
          android:id="@+id/note_keep_before"
          android:layout_height="match_parent"
          android:layout_width="wrap_content"
          android:text="@string/note_keep_before"
          android:textSize="18sp"
          android:onClick="onClickNote"/>
      <Button
          android:id="@+id/note_want_more"
          android:layout_height="match_parent"
          android:layout_width="wrap_content"
          android:text="@string/note_want_more"
          android:textSize="18sp"
          android:onClick="onClickNote"/>
      <Button
          android:id="@+id/note_best_list"
          android:layout_height="match_parent"
          android:layout_width="wrap_content"
          android:text="@string/note_best_list"
          android:textSize="18sp"
          android:onClick="onClickNote"/>
      <Button
          android:id="@+id/note_other"
          android:layout_height="match_parent"
          android:layout_width="wrap_content"
          android:text="@string/note_other"
          android:textSize="18sp"
          android:onClick="onClickNote"/>
    </LinearLayout>
    <TextView
        android:id="@+id/playlistTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:focusable="true"
        android:text="(click to select playlist)"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
  </LinearLayout>
</ScrollView>
